{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": ["dom", "es6"],
    "skipLibCheck": true,
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", "dist", "src/**/*.test.ts"],
  "include": ["src/**/*.ts"],
  "files": ["src/index.ts"]
}
